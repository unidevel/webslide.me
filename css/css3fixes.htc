--/css/library.css--
.button{border-radius:5px}
.sidebar{border-radius:10px}
.lightbox[id] header,.sidebar header{border-radius:10px 10px 0 0}
.lightbox[id] article,.sidebar article{border-radius:0 0 10px 10px}
.lightbox legend{border-radius:5px}
.lightbox,.lightbox.hidden{transition:all 1s ease}

